<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384..." crossorigin="anonymous">
<%- include('../partials/header') %>
<div class="container mt-4">
    <h2>Data Kelas</h2>
    <a href="/admin/kelas/tambah" class="btn btn-success mb-2">Tambah Kelas</a>

    <table class="table table-bordered table-striped">
        <thead class="table-dark">
            <tr>
                <th>Nama Kelas</th>
                <th>Deskripsi</th>
                <th>Gambar</th>
                <th>Aksi</th>
            </tr>
        </thead>
        <tbody>
            <% kelas.forEach(k => { %>
                <tr>
                    <td><%= k.nama_kelas %></td>
                    <td><%= k.deskripsi.length > 100 ? k.deskripsi.substring(0, 100) + '...' : k.deskripsi %></td>
                    <td>
                        <% if (k.gambar) { %>
                            <img src="/images/<%= k.gambar %>" alt="Gambar <%= k.nama_kelas %>" width="100">
                        <% } else { %>
                            <em>Tidak ada gambar</em>
                        <% } %>
                    </td>
                    <td>
                        <a href="/admin/edit/<%= k.id %>" class="btn btn-warning btn-sm">Edit</a>
                        <a href="/admin/kelas/hapus/<%= k.id %>" class="btn btn-danger btn-sm" onclick="return confirm('Yakin ingin menghapus?')">Hapus</a>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
    <a class="btn btn-primary mb-2" href="/admin/transaksi">Kelola Transaksi</a>
</div>
<%- include('../partials/footer') %>