<%- include('partials/header') %>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container mt-5">
  <h2>Daftar Transaksi</h2>

  <div class="btn-group mt-3 mb-3">
    <% limitOptions.forEach(opt => { %>
      <a href="/transaksi?limit=<%= opt %>" class="btn btn-<%= limitParam == opt ? 'dark' : 'outline-dark' %>">
        <%= opt %>
      </a>
    <% }) %>
    <a href="/transaksi?limit=all" class="btn btn-<%= limitParam == 'all' ? 'dark' : 'outline-dark' %>">
      Semua
    </a>
  </div>

  <table class="table table-bordered table-striped">
    <thead class="table-dark">
      <tr>
        <th>No</th>
        <th>Nama</th>
        <th>Kelas</th>
        <th>Tanggal Transaksi</th>
        <th>Status</th>
        <th>Alasan</th>
      </tr>
    </thead>
    <tbody>
      <% transaksi.forEach((t, i) => { %>
        <tr>
          <td><%= i + 1 + ((currentPage - 1) * (limitParam !== 'all' ? parseInt(limitParam) : 0)) %></td>
          <td><%= t.nama_depan %> <%= t.nama_belakang %></td>
          <td><%= t.nama_kelas %></td>
          <td><%= t.tanggal_pendaftaran %></td>
          <td><%= t.status || '-' %></td>
          <td><%= t.alasan || '-' %></td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>

<%- include('partials/footer') %>
