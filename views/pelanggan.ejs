<%- include('partials/header') %>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container mt-5">
  <h2>Daftar Pelanggan</h2>

  <div class="btn-group mt-3 mb-3">
    <% limitOptions.forEach(opt => { %>
      <a href="/pelanggan?limit=<%= opt %>" class="btn btn-<%= limitParam == opt ? 'dark' : 'outline-dark' %>">
        <%= opt %>
      </a>
    <% }) %>
    <a href="/pelanggan?limit=all" class="btn btn-<%= limitParam == 'all' ? 'dark' : 'outline-dark' %>">
      Semua
    </a>
  </div>

  <table class="table table-bordered table-striped">
    <thead class="table-dark">
      <tr>
        <th>No</th>
        <th>Nama</th>
        <th>Email</th>
        <th>Telepon</th>
        <th>Alamat</th>
      </tr>
    </thead>
    <tbody>
      <% pelanggan.forEach((p, i) => { %>
        <tr>
          <td><%= i + 1 + ((currentPage - 1) * (limitParam !== 'all' ? parseInt(limitParam) : 0)) %></td>
          <td><%= p.nama_depan %> <%= p.nama_belakang %></td>
          <td><%= p.email %></td>
          <td><%= p.no_hp %></td>
          <td><%= p.alamat %>, <%= p.kota %>, <%= p.provinsi %></td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>

<%- include('partials/footer') %>
