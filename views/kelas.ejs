<%- include('partials/header') %>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container my-5">
  <div class="card shadow-lg">
    <div class="row g-0">
      <div class="col-md-6">
        <img src="/images/<%= kelas.gambar %>" class="img-fluid rounded-start h-100 w-100 object-fit-cover" alt="<%= kelas.nama_kelas %>">
      </div>
      <div class="col-md-6 d-flex align-items-center">
        <div class="card-body">
          <h3 class="card-title mb-3"><%= kelas.nama_kelas %></h3>
          <p class="card-text"><%= kelas.deskripsi %></p>
          <a href="/form?kelas_id=<%= kelas.id %>" class="btn btn-dark mt-3">Pesan Kelas Ini</a>
          <a href="/" class="btn btn-outline-secondary mt-3 ms-2">Kembali</a>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') %>
