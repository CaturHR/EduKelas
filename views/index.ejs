<%- include('partials/header') %>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384..." crossorigin="anonymous">

<div class="container mt-4">
  <h2 class="text-center mb-4">Daftar Kelas yang Tersedia</h2>
  <div class="row">
    <% kelas.forEach(k => { %>
      <div class="col-md-4 mb-4">
        <div class="card h-100">
          <img src="/images/<%= k.gambar %>" class="card-img-top" alt="<%= k.nama_kelas %>">
          <div class="card-body d-flex flex-column">
            <h5 class="card-title"><%= k.nama_kelas %></h5>
            <p class="card-text"><%= k.deskripsi.substring(0, 100) %>...</p>
            <a href="/kelas/<%= k.id %>" class="btn btn-outline-dark btn-sm mb-2">Lihat Detail</a>
            <a href="/form?kelas_id=<%= k.id %>" class="btn btn-primary mt-auto">Pesan Kelas Ini</a>
          </div>
        </div>
      </div>
    <% }) %>
  </div>
</div>

<%- include('partials/footer') %>
